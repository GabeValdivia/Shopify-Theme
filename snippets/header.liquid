<header>
    <h1>{{ shop.name }}</h1>
    <h3>{{ shop.phone }}</h3>
    <ul>
    <!-- Main menu -->
        {% for link in linklists.main-menu.links -%}
            <li>{{ link.title | link_to: link.url }}</li>
        {%- endfor %}
    </ul>

    {% if settings.show_search == true %}

    <form action="/search">
    <input type="search" name="q">
    <button type="submit">Search</button>
    {% endif %}
</header>